<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".child.ChildMainActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_toys"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/filter_button_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/common_google_signin_btn_text_dark"
        android:layout_alignTop="@+id/my_toys"
        android:layout_alignRight="@+id/my_toys" />

</RelativeLayout>