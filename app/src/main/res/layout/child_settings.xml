<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/child_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TextView"
        android:layout_gravity="center"
        android:textSize="32dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Child's suggestions"
        android:layout_gravity="left"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggested_toy_view"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <TextView
        android:id="@+id/child_settings_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Child's settings"
        android:layout_gravity="center"
        android:textSize="28dp"
        />
    <TextView
        android:paddingTop="10dp"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose radius of area to display toys for Your child(in km)(0-1000) default 30 " />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000" />

    <TextView
        android:id="@+id/radius_info"
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:text="0" />
    <TextView
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose tags for child(default is all)" />

    <TextView
        android:id="@+id/chosen_tags"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
       android:clickable="true"
        />
    <TextView
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose age range for child(default is all)" />

    <TextView
        android:id="@+id/chosen_age_range"

        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        />

    <Button
        android:id="@+id/save_child_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save child's settings" />


</LinearLayout>
</ScrollView>