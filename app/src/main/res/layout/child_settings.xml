<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/child_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:padding="5dp"
        android:text="TextView"

        android:textSize="32dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:fontFamily="casual"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Child's suggestions"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="18sp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggested_toy_view"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/child_settings_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:padding="5dp"
        android:text="Child's settings"
        android:textSize="28dp" />
    <TextView
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose radius of area to display toys for Your child\n(0-1000km) " />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"

        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/radius_info"
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:fontFamily="casual"
        android:textColor="@android:color/holo_red_light"/>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose amount of available child's suggestion"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <SeekBar
        android:id="@+id/seekBarSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/suggestion_info"
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:text="0"
android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:fontFamily="casual"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/asdas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select available age category for child"

        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <com.example.exchangetoys.spinner.MultiSelectionSpinner
        android:id="@+id/spn_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" />
    <Button

        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="casual"
        android:id="@+id/save_child_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save child's settings" />


</LinearLayout>
</ScrollView>