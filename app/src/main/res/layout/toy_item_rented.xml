<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp">

    <ImageView
        android:id="@+id/imageViewToy"
        android:layout_width="130dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"

        android:contentDescription="@string/todo" />

    <TextView
        android:layout_width="121dp"
        android:layout_height="69dp"
        android:layout_below="@+id/imageViewToy"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:fontFamily="casual"


        android:text="Suggested return data:"
        android:textAlignment="center"


        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/returnData"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewToy"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="36dp"
        android:layout_toEndOf="@+id/imageViewToy"
        android:fontFamily="casual"
        android:text="Datasdfds:     "
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/imageViewToy"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="155dp"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="casual"
        android:layout_toEndOf="@+id/imageViewToy"
        android:text="Return" />

    <TextView
        android:id="@+id/toyName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="43dp"
        android:fontFamily="casual"
        android:text="@string/toy_name"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp" />

</RelativeLayout>